---
interface Props {
  url: string;
  image: { facebook: string; pinterest: string; twitter: string };
  description: string;
}

const { url, image, description } = Astro.props as Props;
---

<div
  class="not-prose mb-12 flex divide-x-2 text-white divide-white dark:divide-black"
>
  <a
    href=`https://www.facebook.com/sharer/sharer.php?u=https://www.rosyarc.com${url}`
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-2 rounded-s-xl p-2 font-bold bg-blue-600 hover:bg-blue-700"
    ><span aria-hidden="true"
      ><svg
        class="size-4 md:size-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 512 512"
      >
        <!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path
          d="M512 256C512 114.6 397.4 0 256 0S0 114.6 0 256C0 376 82.7 476.8 194.2 504.5V334.2H141.4V256h52.8V222.3c0-87.1 39.4-127.5 125-127.5c16.2 0 44.2 3.2 55.7 6.4V172c-6-.6-16.5-1-29.6-1c-42 0-58.2 15.9-58.2 57.2V256h83.6l-14.4 78.2H287V510.1C413.8 494.8 512 386.9 512 256h0z"
        ></path></svg
      ></span
    >
    Share <span class="sr-only">on facebook</span></a
  >
  <a
    href=`https://www.pinterest.com/pin/create/button/?url=https://www.rosyarc.com${url}&media=${image.pinterest}&description=${description}`
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-2 p-2 font-bold bg-red-600 hover:bg-red-700"
  >
    <span aria-hidden="true"
      ><svg
        class="size-4 md:size-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 496 512"
      >
        <!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path
          d="M496 256c0 137-111 248-248 248-25.6 0-50.2-3.9-73.4-11.1 10.1-16.5 25.2-43.5 30.8-65 3-11.6 15.4-59 15.4-59 8.1 15.4 31.7 28.5 56.8 28.5 74.8 0 128.7-68.8 128.7-154.3 0-81.9-66.9-143.2-152.9-143.2-107 0-163.9 71.8-163.9 150.1 0 36.4 19.4 81.7 50.3 96.1 4.7 2.2 7.2 1.2 8.3-3.3 .8-3.4 5-20.3 6.9-28.1 .6-2.5 .3-4.7-1.7-7.1-10.1-12.5-18.3-35.3-18.3-56.6 0-54.7 41.4-107.6 112-107.6 60.9 0 103.6 41.5 103.6 100.9 0 67.1-33.9 113.6-78 113.6-24.3 0-42.6-20.1-36.7-44.8 7-29.5 20.5-61.3 20.5-82.6 0-19-10.2-34.9-31.4-34.9-24.9 0-44.9 25.7-44.9 60.2 0 22 7.4 36.8 7.4 36.8s-24.5 103.8-29 123.2c-5 21.4-3 51.6-.9 71.2C65.4 450.9 0 361.1 0 256 0 119 111 8 248 8s248 111 248 248z"
        ></path></svg
      ></span
    >
    Save <span class="sr-only">to Pinterest</span>
  </a>
  <a
    href=`https://twitter.com/share?url=https://www.rosyarc.com${url}`
    target="_blank"
    rel="noopener noreferrer"
    class="twitter-share-button flex items-center gap-2 rounded-e-xl bg-neutral-900 p-2 font-bold hover:bg-black dark:bg-neutral-950"
    ><span aria-hidden="true"
      ><svg
        class="size-4 md:size-5"
        fill="currentColor"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
      >
        <!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path
          d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"
        ></path></svg
      ></span
    >
    Post <span class="sr-only">on Twitter</span></a
  >
</div>
