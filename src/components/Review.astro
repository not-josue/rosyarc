---
// Component imports
import StarGroup from "./StarGroup.astro";

interface Props {
  bgLight?: string;
  bgDark?: string;
  item: string;
  quote: string;
  lgColSpan?: string;
  lgRowSpan?: string;
  isHidden?: boolean;
}

const {
  item,
  quote,
  bgLight = "bg-white",
  bgDark = "dark:bg-neutral-800",
  lgColSpan = "",
  lgRowSpan = "",
  isHidden = false,
} = Astro.props as Props;
---

<article
  class:list={{
    "review border-2 grid place-items-center content-center gap-4 rounded-xl p-4 text-center shadow-xl md:p-8 dark:border-neutral-700 dark:shadow-lg dark:shadow-neutral-700": true,
    [bgLight]: !!bgLight,
    [bgDark]: !!bgDark,
    [lgColSpan]: !!lgColSpan,
    [lgRowSpan]: !!lgRowSpan,
    "hidden opacity-0 transform scale-90 transition-all duration-500 ease-in-out":
      isHidden,
  }}
>
  <!-- Item -->
  <h3 class="text-balance text-xl font-bold md:text-2xl">
    <slot />
    <span class="sr-only">Item Purchased:</span>
    {item}
  </h3>
  <hr class="h-1 w-full bg-gray-300 dark:bg-gray-200" />
  <!-- Quote -->
  <blockquote class="text-pretty italic md:text-xl">
    <span class="sr-only">Review:</span> ‟ {quote} ”
  </blockquote>
  <!-- Stars -->
  <StarGroup />
</article>
